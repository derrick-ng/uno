<%- include('../layout/header', { suppressHeader: true }) %>
<div class="flex h-screen">
  <!-- Chat section on the left -->
  <div class="w-1/3 bg-gray-100 p-4 overflow-y-auto"><%- include("../chat/chat") %></div>

  <!-- Lobby content on the right -->
  <div class="w-2/3 p-6">
    <div class="bg-white rounded-lg shadow divide-y divide-gray-200 overflow-hidden">
      <!-- Header section: Welcome message and user information -->
      <div class="px-4 py-3">
        <h1 class="text-2xl mt -10 font-bold">Lobby Page- Welcome to the UNO</h1>
        <div class="flex justify-between mt-5 text-sm text-gray-600">
          <span
            >User:
            <%= user.email %>
            - ID: (<%= user.id %>)</span
          >
        </div>
      </div>

      <!-- Form section: Game description and new game button -->
      <div class="px-4 py-3 flex items-center">
        <form action="/games/create" method="post" class="flex items-center w-full">
          <input
            type="text"
            name="description"
            id="description"
            class="flex-grow mr-4 rounded-md border border-gray-300 p-2 placeholder-gray-400 focus:ring-2 focus:ring-indigo-600"
            placeholder="Brief game description"
          />
          <button
            type="submit"
            id="create-game"
            class="inline-flex items-center gap-x-2 rounded-md bg-sky-800 px-4 py-2 text-sm font-semibold text-white hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 0 1-.657.643 48.39 48.39 0 0 1-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 0 1-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 0 0-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 0 1-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 0 0 .657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 0 1-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 0 0 5.427-.63 48.05 48.05 0 0 0 .582-4.717.532.532 0 0 0-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 0 0 .658-.663 48.422 48.422 0 0 0-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 0 1-.61-.58v0Z"
              />
            </svg>
            New Game
          </button>
        </form>
      </div>

      <!-- Game listing inclusion -->
      <%- include("game-listing") %>
    </div>
  </div>
</div>
<%- include('../layout/footer') %>
